</graphicData>
    <projectile>
  <damageDef>SawGun_Saw</damageDef>
  <damageAmountBase>25</damageAmountBase>
  <stoppingPower>1.5</stoppingPower>
  <armorPenetrationBase>0.19</armorPenetrationBase>
  <speed>55</speed>
</projectile>
  </ThingDef>

</Defs>